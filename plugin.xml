<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        id="vn-native-fbsdk" version="1.0.0">
    <name>Vn Native example library</name>
    <description>Vn Native Example Library</description>
    <license>Vn Native 2.0</license>
    <keywords>Vnnative, Example library</keywords>
    <platform name="ios">
        <js-module src="www/ios/loginfacebook.js" name="loginfacebook">
            <clobbers target="loginfacebook" />
        </js-module>
        <config-file target="config.xml" parent="/widget">
            <feature name="LoginFacebook">
                <param name="ios-package" value="LoginFacebook" />
            </feature>
        </config-file>
        <header-file src="src/ios/LoginFacebook.h" />
        <source-file src="src/ios/LoginFacebook.m" />
        <!-- <framework src="src/ios/Carthage/Build/iOS/FBSDKCoreKit.framework" custom="true"/>
        <framework src="src/ios/Carthage/Build/iOS/FBSDKLoginKit.framework" custom="true"/>
        <framework src="src/ios/Carthage/Build/iOS/FBSDKShareKit.framework" custom="true"/> -->
        <!-- Facebook SDK -->
        <podspec>
            <config>
                <source url="https://cdn.cocoapods.org/"/>
            </config>
            <pods use-frameworks="true">
                <pod name="FBSDKCoreKit" spec="5.15.0"/>
                <pod name="FBSDKLoginKit" spec="5.15.0"/>
                <pod name="FBSDKShareKit" spec="5.15.0"/>
            </pods>
        </podspec>
    </platform>
    <platform name="android">
        <js-module src="www/android/login.js" name="login">
            <clobbers target="login" />
        </js-module>
        <config-file target="config.xml" parent="/widget">
            <feature name="Login">
                <param name="android-package" value="org.apache.cordova.plugin.Login"/>
            </feature>
        </config-file>
        <source-file src="src/android/Login.java" target-dir="src/org/apache/cordova/plugin" />
    </platform>
    <platform name="browser">
        <js-module src="www/browser/echo.js" name="echo">
            <clobbers target="echo" />
        </js-module>
    </platform>
    <platform name="osx">
        <js-module src="www/osx/echo.js" name="echo">
            <clobbers target="echo" />
        </js-module>
    </platform>
    <platform name="windows">
        <js-module src="www/windows/echo.js" name="echo">
            <clobbers target="echo" />
        </js-module>
        <js-module src="src/windows/echopluginProxy.js" name="EchoProxy">
            <merges target="" />
        </js-module>
    </platform>
</plugin>